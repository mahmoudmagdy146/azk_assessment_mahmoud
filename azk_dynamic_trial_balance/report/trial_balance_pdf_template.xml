<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dynamic_trial_balance_pdf_document">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Dynamic Trial Balance</h2>

                <div class="row mb-4">
                    <div class="col-6">
                        <strong>Company:</strong> <span t-esc="company.name"/>
                    </div>
                    <div class="col-6">
                        <strong>Period:</strong>
                        <span t-esc="date_from"/> to <span t-esc="date_to"/>
                    </div>
                </div>

                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th rowspan="2">Account</th>
                            <th colspan="3" class="text-center">Initial Balance</th>
                            <th colspan="3" class="text-center">Movement</th>
                            <th colspan="3" class="text-center">Ending Balance</th>
                        </tr>
                        <tr>
                            <th class="text-right">Debit</th>
                            <th class="text-right">Credit</th>
                            <th class="text-right">Balance</th>
                            <th class="text-right">Debit</th>
                            <th class="text-right">Credit</th>
                            <th class="text-right">Balance</th>
                            <th class="text-right">Debit</th>
                            <th class="text-right">Credit</th>
                            <th class="text-right">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="lines" t-as="line">
                            <tr t-att-class="'level_%s' % line.get('level', 2)">
                                <td>
                                    <span t-if="line.get('level') == 1"
                                          style="font-weight: bold;"
                                          t-esc="line['name']"/>
                                    <span t-else="" t-esc="line['name']"/>
                                </td>
                                <t t-foreach="line['columns']" t-as="col">
                                    <td class="text-right">
                                        <span t-esc="col.get('name', '')"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>