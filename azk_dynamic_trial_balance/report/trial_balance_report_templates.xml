<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="report_trial_balance_document">
    <t t-call="web.external_layout">
      <t t-set="company" t-value="o.company_id"/>
      <div class="page">
        <h2>Trial Balance</h2>
        <p>Company: <t t-esc="o.company_id.name"/></p>
        <p>Period: <t t-esc="o.date_from"/> - <t t-esc="o.date_to"/></p>
        <table class="table table-sm o_main_table">
          <thead>
            <tr>
              <th>Account</th>
              <th>Code</th>
              <th class="text-right">Debit</th>
              <th class="text-right">Credit</th>
              <th class="text-right">Balance</th>
            </tr>
          </thead>
          <tbody>
            <t t-foreach="docs" t-as="line">
              <tr>
                <td><t t-esc="line.account_name"/></td>
                <td><t t-esc="line.account_code"/></td>
                <td class="text-right"><t t-esc="line.debit"/></td>
                <td class="text-right"><t t-esc="line.credit"/></td>
                <td class="text-right"><t t-esc="line.balance"/></td>
              </tr>
            </t>
          </tbody>
        </table>
      </div>
    </t>
  </template>

  <report
    id="action_report_trial_balance"
    model="trial.balance.line"
    string="Trial Balance PDF"
    report_type="qweb-pdf"
    name="azk_dynamic_trial_balance.report_trial_balance_document"
    file="azk_dynamic_trial_balance.report_trial_balance_document"
    print_report_name="'trial_balance_%s_%s' % (object.date_from, object.date_to)"
  />
</odoo>
