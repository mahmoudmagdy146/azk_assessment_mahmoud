<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Main Menu Item - Opens Wizard -->
    <menuitem id="menu_dynamic_trial_balance"
              name="Dynamic Trial Balance"
              parent="account.menu_finance_reports"
              action="action_trial_balance_wizard"
              sequence="10"/>

    <!-- Alternative: Direct access to report (optional) -->
    <record id="action_dynamic_trial_balance_report_direct" model="ir.actions.client">
        <field name="name">Dynamic Trial Balance (Direct)</field>
        <field name="tag">account_report</field>
        <field name="context" eval="{'model': 'account.report',
                                      'report_id': ref('dynamic_trial_balance_report')}"/>
    </record>
</odoo>