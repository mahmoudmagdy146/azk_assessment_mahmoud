<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="azk_pos_custom_receipt_view_pos_config_custom_receipt" model="ir.ui.view">
        <field name="name">pos.config.form.custom.receipt</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//setting[field[@name='module_pos_hr']]" position="after">
                <setting
                    string="Configure Customized Receipt"
                    help="Configure New Customized Receipt Layout Details">
                    <field name="use_customized_receipt"/>
                    <div class="content-group mt16" invisible="not use_customized_receipt">
                        <label for="receipt_logo" string="Receipt Logo"/>
                        <field name="receipt_logo_filename" invisible="1"/>
                        <field name="receipt_logo" filename="receipt_logo_filename" options="{'accepted_file_extensions': 'image/*'}"/>
<br/>
                        <label for="company_name" string="Company Name"/>
                        <field name="company_name" required="use_customized_receipt"/>

                        <label for="company_details" string="Company Details"/>
                        <field name="company_details" required="use_customized_receipt"/>

                        <label for="show_customer_details" string="Configure Customer Details"/>
                        <field name="show_customer_details" required="use_customized_receipt"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
