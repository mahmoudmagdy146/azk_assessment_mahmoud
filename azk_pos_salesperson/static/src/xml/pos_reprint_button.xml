<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-inherit="point_of_sale.TicketScreen" t-inherit-mode="extension">
        <xpath expr="//div[@class='col narrow p-2' and contains(., 'Status')]" position="after">
            <div class="col wide p-2">Reprint</div>
        </xpath>
    </t>

    <t t-inherit="point_of_sale.TicketScreen" t-inherit-mode="extension">
        <xpath expr="//t[@t-foreach='_filteredOrderList']//div[@class='col narrow p-2']//t[@t-esc='getStatus(order)']/ancestor::div[@class='col narrow p-2']" position="after">
            <div class="col wide p-2">
                <t t-if="isOrderSynced">
                    <button
                        class="control-button btn btn-light btn-lg lh-lg flex-grow-1 flex-shrink-1"
                        t-on-click="() => doPrint.call(order)"
                    >
                        <i t-attf-class="fa {{doPrint.status === 'loading' ? 'fa-fw fa-spin fa-circle-o-notch' : 'fa-print'}} me-1" />
                        Print Receipt
                    </button>
                </t>
            </div>
        </xpath>
    </t>

</templates>
